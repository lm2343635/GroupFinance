{
	"log": ["CRUD", "REST+", "Access"],
	"facebook": { 
		"register": true 
	},
	"databases": {
		"group_finance": {
			"server": "walrus:",
			"users": {
				"GUEST": {"disabled": true}
			},
			"sync": `
				function (doc, oldDoc) {
					//show all atrribute
					for(var name in doc) {
					console.log("doc."+name+" = "+doc[name]);
					}
					//show info about revisions
					for(var name in doc._revisions) {
					console.log("doc._revisions."+name+" = "+doc._revisions[name]);
					}

					if(doc.type == "User") {

					} else if(doc.type == "AccountBook") {
						//transfer doc.cooperaters to access users json array
						var users = eval(doc.cooperaters);
						//add user myself to access user array
						users[users.length] = doc.userId;
						//use doc id as channel name
						channel(doc._id);
						//allow user and cooperaters to access to channel
						requireUser(users);
						access(users, doc._id);
					} else if(doc.type == "Classification" || 
						doc.type == "Account" || 
						doc.type =="Shop") {
						channel(doc.accountBook);
					}
				}
			`
		}
	}
}